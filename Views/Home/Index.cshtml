<link rel="stylesheet" href="css/site.css"> 
<img src="/img/Logo-Pasqu.jfif">
<h1>Bienvenido a Series para Enanos</h1>
<!--Card-->
@foreach (var item in ViewBag.mostraSerie)
{
  <div class="card" style="width: 18rem;">
    <img src="/img/Logo-Pasqu.jfif" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">@item.Nombre</h5>
      <p class="card-text">@item.Sinopsis</p>
      <a href="#" class="btn btn-primary">Temporadas</a>        
      <a href="#" class="btn btn-primary">Actores</a>
      <a href="#" class="btn btn-primary">Mas Info</a>
    </div>
  </div>
}

<!--Fin Card-->
<!--Modal-->
<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!--Fin Modal-->

